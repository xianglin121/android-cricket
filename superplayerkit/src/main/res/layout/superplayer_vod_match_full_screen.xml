<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="13dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#66333333"
        android:layout_marginBottom="12dp">
        <TextView
            android:id="@+id/tv_tab_scorecard"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Scorecard"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/selector_match_top"/>

        <TextView
            android:id="@+id/tv_tab_animation"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Live Animation"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/selector_match_top"/>

        <TextView
            android:id="@+id/tv_tab_squad"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Squad"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/selector_match_top"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:overScrollMode="never"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/ll_scorecard_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_match_main_black"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@drawable/bg_match_990"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:paddingLeft="12dp"
                    android:text="BATTER"
                    android:textColor="@color/white"
                    android:textSize="11dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="R"
                    android:textColor="@color/white"
                    android:textSize="11dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="B"
                    android:textColor="@color/white"
                    android:textSize="11dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="4s"
                    android:textColor="@color/white"
                    android:textSize="11dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="6s"
                    android:textColor="@color/white"
                    android:textSize="11dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingRight="12dp"
                    android:text="S/R"
                    android:textColor="@color/white"
                    android:textSize="11dp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_home_batter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="1"
                        android:text="@string/extras"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="11dp" />

                    <TextView
                        android:id="@+id/tv_home_extras"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:textColor="@color/white"
                        android:textSize="11dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="@string/did_not_bat"
                        android:textColor="@color/white"
                        android:textSize="11dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tv_home_no_bat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:textColor="@color/white"
                        android:textSize="11dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/bg_match_990"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:paddingLeft="12dp"
                    android:text="BOWLER"
                    android:textColor="@color/white"
                    android:textSize="11dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="O"
                    android:textColor="@color/white"
                    android:textSize="11dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="R"
                    android:textColor="@color/white"
                    android:textSize="11dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="W"
                    android:textColor="@color/white"
                    android:textSize="11dp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_home_bowler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_match_990"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:paddingLeft="12dp"
                    android:text="FALL OF WICKETS"
                    android:textColor="@color/white"
                    android:textSize="11dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="@string/score_uppercase"
                    android:textColor="@color/white"
                    android:textSize="11dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="@string/over_uppercase"
                    android:textColor="@color/white"
                    android:textSize="11dp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_home_wicket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <FrameLayout
        android:id="@+id/fl_animation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_match_white"
        android:padding="10dp"
        android:visibility="gone">
        <WebView
            android:id="@+id/wv_animation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"/>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_empty"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_50black_8"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/bg_empty"/>

        <TextView
            android:id="@+id/tv_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty_common"
            android:textSize="16dp"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_squad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_tab_home"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="31dp"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:textColor="@drawable/selector_text_color_w_or_b"
            android:textSize="12sp"
            android:background="@drawable/selector_match_team_left"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"/>

        <TextView
            android:id="@+id/tv_tab_away"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="31dp"
            android:gravity="center"
            android:textColor="@drawable/selector_text_color_w_or_b"
            android:textSize="12sp"
            android:background="@drawable/selector_match_team_right"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"/>

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView_squad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gradient_white_to_black"
        android:overScrollMode="never"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_squad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:overScrollMode="never"/>

            <RelativeLayout
                android:id="@+id/rl_squad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_50black_8">

                <TextView
                    android:id="@+id/tv_home_win_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:layout_marginTop="9dp"/>

                <TextView
                    android:id="@+id/tv_away_win_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="18dp"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="9dp"/>

                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="5dp"
                    android:max="100"
                    android:progress="50"
                    android:progressDrawable="@drawable/progress_team_comparison"
                    android:layout_below="@id/tv_home_win_rate" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/progress_bar"
                    android:paddingTop="5dp"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:paddingBottom="9dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_home_name"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textColor="@color/white"
                        android:gravity="right"/>

                    <ImageView
                        android:id="@+id/iv_home_logo"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="5dp"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/img_team_logo_default"/>

                    <TextView
                        android:id="@+id/tv_vs"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="VS"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:gravity="center_horizontal"/>

                    <ImageView
                        android:id="@+id/iv_away_logo"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginRight="5dp"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/img_team_logo_default"/>

                    <TextView
                        android:id="@+id/tv_away_name"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:gravity="left"
                        android:maxLines="2"
                        android:ellipsize="end"/>

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>