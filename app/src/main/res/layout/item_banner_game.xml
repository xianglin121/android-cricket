<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">

    <com.tencent.liteav.demo.superplayer.LivePlayerView
        android:id="@+id/playerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/ball_live_bg"
        android:visibility="gone"/>

    <com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer
        android:id="@+id/history_video_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@mipmap/ball_live_bg"/>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/bg_football_match_head"
        android:foreground="@drawable/shape_gradient_black"
        app:riv_corner_radius="10dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@id/playerView"
        android:src="@mipmap/bg_avatar_default"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_avatar"
        android:layout_above="@+id/tv_bottom"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="10dp"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:maxLines="1"
        android:singleLine="true"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/tv_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_avatar"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/iv_avatar"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="6dp"
        android:textSize="12dp"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/iv_live_status"
        android:layout_width="50dp"
        android:layout_height="22dp"
        android:src="@mipmap/icon_live_pink"
        android:layout_alignParentTop="true"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_eyes_num"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:background="@drawable/shape_bg_80black_rect"
        android:drawableLeft="@mipmap/icon_eyes_full_white"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:text="0"
        android:gravity="center"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:drawablePadding="4dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/iv_live_status"
        android:layout_alignTop="@+id/iv_live_status"
        android:layout_marginLeft="10dp"/>
</RelativeLayout>
