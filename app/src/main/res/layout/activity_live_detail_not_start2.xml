<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/statusBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/c_1D2550"
            android:paddingLeft="15dp"
            android:paddingTop="32dp"
            android:paddingRight="15dp"
            android:paddingBottom="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:textSize="13sp"
                android:textColor="@color/white"
                tools:text="Sri Lanka Women vs New Zealand Women Sri Lanka Women vs New Zealand Women"/>

            <TextView
                android:id="@+id/tv_tool_eyes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_80black_14dp_rec"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:drawableLeft="@mipmap/icon_eyes_2"
                android:drawablePadding="5dp"
                tools:text="31.9K"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:layout_marginRight="15dp"/>

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/icon_fork_white"
                android:padding="4dp"/>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/green">

            <ImageView
                android:id="@+id/iv_cover"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@mipmap/ball_live_bg"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                android:padding="10dp"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@+id/iv_cover"
                android:background="@drawable/shape_85000000_0dp"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/iv_home_logo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="50dp"
                android:background="@color/transparent"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/iv_away_logo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="50dp"
                android:background="@color/transparent"
                android:visibility="gone"/>

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_countdown"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@color/c_801B1843"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_countdown_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/match_starts_in2"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:layout_centerInParent="true"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_countdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:fontFamily="@font/noto_sans_display_bold"
                android:layout_below="@id/tv_countdown_info"
                android:layout_centerHorizontal="true"
                android:visibility="gone"/>

            <ImageView
                android:layout_width="61dp"
                android:layout_height="16dp"
                android:background="@mipmap/img_logo_top"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="16dp"/>

            <LinearLayout
                android:id="@+id/ll_desc"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="vertical"
                android:background="@drawable/shape_bg_80black_rect"
                android:paddingLeft="20dp"
                android:paddingRight="25dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="21dp">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:fontFamily="@font/noto_sans_display_semibold"
                    tools:text="02 Bells"/>

                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    tools:text="followed:555"/>

            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_avatar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/bg_avatar_default"
                android:layout_marginLeft="18dp"
                android:layout_alignTop="@id/ll_desc" />

            <TextView
                android:id="@+id/tv_star"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/follow"
                android:textColor="@color/white"
                android:fontFamily="@font/noto_sans_display_semibold"
                android:textSize="11sp"
                android:layout_toRightOf="@id/ll_desc"
                android:layout_marginLeft="-15dp"
                android:background="@drawable/bg_charge"
                android:gravity="center"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:layout_alignTop="@id/ll_desc"/>

            <TextView
                android:id="@+id/tv_tool_heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="40dp"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:drawablePadding="4dp"
                android:drawableTop="@mipmap/icon_heart_white2"
                tools:text="7.9K"
                android:layout_above="@+id/tv_tool_share"
                android:layout_alignRight="@+id/tv_tool_share"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_tool_share"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:drawablePadding="4dp"
                android:drawableTop="@mipmap/icon_share_white"
                tools:text="200"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="12dp"/>

        </RelativeLayout>

<!--        <ImageView
            android:id="@+id/iv_advert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:visibility="gone"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_advert"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/iv_advert_qrcode"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="centerCrop"
                android:background="@color/black"
                android:visibility="gone"/>
        </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/c_f5f5f5">

            <FrameLayout
                android:id="@+id/fl_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <FrameLayout
                android:id="@+id/fl_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </RelativeLayout>
    </LinearLayout>

    </LinearLayout>

    <!--中间礼物-->
    <LinearLayout
        android:id="@+id/ll_gift_container"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:orientation="vertical" />

    <!--贵族进场-->
    <LinearLayout
        android:id="@+id/ll_noble_container"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:orientation="vertical" />

    <!--    <com.opensource.svgaplayer.SVGAImageView-->
    <!--        android:id="@+id/svga_gift"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent"-->
    <!--        app:autoPlay="true"-->
    <!--        app:loopCount="1"/>-->

    <FrameLayout
        android:id="@+id/fl_float_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/view_broadcast"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/bg_broadcast"
            android:padding="0dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:background="@mipmap/icon_broadcast_barrage_selected" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="35dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="12dp" />
        </LinearLayout>
    </FrameLayout>

    <com.onecric.live.view.LanguagesWebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</RelativeLayout>