<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginAccessActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/bg_splash2"
        android:scaleType="centerCrop"/>

    <Button
        android:id="@+id/btn_sign_up"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/shape_btn_grad_red"
        android:layout_marginTop="30dp"
        android:textAllCaps="true"
        android:text="@string/sign_up"
        android:textSize="16sp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="@color/white"
        android:layout_above="@id/btn_log_in"/>

    <Button
        android:id="@+id/btn_log_in"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/shape_btn_red_stroke_4"
        android:layout_marginTop="26dp"
        android:textSize="16sp"
        android:textAllCaps="true"
        android:text="@string/log_in"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="@color/white"
        android:layout_above="@id/tv_later"/>

    <TextView
        android:id="@+id/tv_later"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:paddingBottom="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="14sp"
        android:text="Sign Up Later"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>