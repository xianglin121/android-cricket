<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smart_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.youth.banner.Banner
                    android:id="@+id/banner_live"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="7dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_author_live_now"
                        android:layout_width="75dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/img_live_now"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tv_author_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:fontFamily="@font/noto_sans_display_semibold"
                        android:text="@string/with_sportcaster"
                        android:textColor="@color/black"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tv_author_error"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:fontFamily="@font/noto_sans_display_semibold"
                        android:text="@string/live_streamers"
                        android:textColor="@color/black"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <include layout="@layout/layout_live_open"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rv_author_live"
                        android:layout_marginTop="-1.5dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginBottom="15dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_author_live"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:paddingLeft="4dp"/>

                </RelativeLayout>

                <ImageView
                    android:id="@+id/iv_advert"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_match_live_now"
                        android:layout_width="75dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/img_live_now"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tv_match_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:fontFamily="@font/noto_sans_display_semibold"
                        android:text="@string/free_to_watch_cricket_tv"
                        android:textColor="@color/black"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tv_match_error"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:fontFamily="@font/noto_sans_display_semibold"
                        android:text="@string/today_live_games"
                        android:textColor="@color/black"/>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_match"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"
                    app:contentPadding="0dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/shape_white_10dp_rec">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_match"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:paddingBottom="10dp"
                            android:overScrollMode="never"/>

                        <TextView
                            android:id="@+id/tv_view_all_live"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/c_DC3C23"
                            android:fontFamily="@font/noto_sans_display_semibold"
                            android:text="@string/show_all_live_games"
                            android:gravity="right"
                            android:textSize="13sp"
                            android:layout_gravity="center_horizontal"
                            android:drawableRight="@mipmap/ic_arr_down_red"
                            android:drawablePadding="6dp"
                            android:paddingBottom="@dimen/dp_10"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/iv_match_error"
                    android:layout_width="match_parent"
                    android:layout_height="182dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/img_live_error3"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    app:riv_corner_radius="10dp"/>

<!--                即将开赛、历史记录-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginBottom="13dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_upcoming_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:fontFamily="@font/noto_sans_display_semibold"
                        android:text="@string/upcoming_fee_to_watch_cricket"
                        android:textColor="@color/black"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tv_upcoming_error"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:fontFamily="@font/noto_sans_display_semibold"
                        android:text="@string/upcoming_live"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tv_view_all_upcoming"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/c_DC3C23"
                        android:fontFamily="@font/noto_sans_display_semibold"
                        android:text="@string/view_all2"
                        android:gravity="right"
                        android:textSize="13sp"/>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_upcoming"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="13dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:fontFamily="@font/noto_sans_display_semibold"
                        android:text="@string/history"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tv_view_all_history"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/c_DC3C23"
                        android:fontFamily="@font/noto_sans_display_semibold"
                        android:text="@string/view_all2"
                        android:gravity="right"
                        android:textSize="13sp"/>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:overScrollMode="never"/>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>
