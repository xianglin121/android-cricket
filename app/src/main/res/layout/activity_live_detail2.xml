<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/statusBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/c_1D2550"
            android:paddingLeft="15dp"
            android:paddingTop="32dp"
            android:paddingRight="15dp"
            android:paddingBottom="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:textSize="13sp"
                android:textColor="@color/white"
                tools:text="Sri Lanka Women vs New Zealand Women Sri Lanka Women vs New Zealand Women"/>

            <TextView
                android:id="@+id/tv_tool_eyes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_80black_14dp_rec"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:drawableLeft="@mipmap/icon_eyes_2"
                android:drawablePadding="5dp"
                tools:text="31.9K"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:layout_marginRight="15dp"/>

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/icon_fork_white"
                android:padding="4dp"/>


        </LinearLayout>



        <RelativeLayout
            android:id="@+id/rl_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <com.tencent.liteav.demo.superplayer.LivePlayerView
                android:id="@+id/playerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/ball_live_bg" />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="14dp"
                android:indeterminateBehavior="repeat"
                android:indeterminateDrawable="@drawable/anim_loading"
                android:indeterminateOnly="true" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer
                android:id="@+id/history_video_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@mipmap/ball_live_bg"/>

            <ImageView
                android:id="@+id/iv_video_mute"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:background="@drawable/selector_mute"
                android:layout_alignBottom="@id/history_video_view"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="45dp" />

            <ImageView
                android:id="@+id/iv_video_screen"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:padding="2dp"
                android:layout_marginRight="15dp"
                android:background="@mipmap/icon_projection_screen"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dp"/>

        </RelativeLayout>
<!--        <ImageView
            android:id="@+id/iv_advert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:visibility="gone"/>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_advert"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/iv_advert_qrcode"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="centerCrop"
                android:background="@color/black"
                android:visibility="gone"/>
        </LinearLayout>


<!--        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_silence"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignLeft="@id/playerView"
                android:layout_alignBottom="@id/playerView"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:src="@mipmap/silence"
                android:visibility="gone"/>

        </RelativeLayout>-->
        <LinearLayout
            android:id="@+id/ll_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/c_f5f5f5">

                <FrameLayout
                    android:id="@+id/fl_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <FrameLayout
                    android:id="@+id/fl_menu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/iv_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="82dp"
                    android:background="@drawable/selector_live_detail_data"
                    android:visibility="gone" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <!--中间礼物-->
    <LinearLayout
        android:id="@+id/ll_gift_container"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:orientation="vertical" />

    <!--贵族进场-->
    <LinearLayout
        android:id="@+id/ll_noble_container"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:orientation="vertical" />

    <!--    <com.opensource.svgaplayer.SVGAImageView-->
    <!--        android:id="@+id/svga_gift"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent"-->
    <!--        app:autoPlay="true"-->
    <!--        app:loopCount="1"/>-->

    <FrameLayout
        android:id="@+id/fl_float_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/view_broadcast"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/bg_broadcast"
            android:padding="0dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:background="@mipmap/icon_broadcast_barrage_selected" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="35dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="12dp" />
        </LinearLayout>
    </FrameLayout>

    <com.onecric.live.view.LanguagesWebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</RelativeLayout>