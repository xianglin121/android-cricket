<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_loading"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:visibility="gone">
    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="@dimen/dp_10">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_marginRight="8dp"
            android:src="@mipmap/img_loading_l1"/>

        <ImageView
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_marginRight="8dp"
            android:src="@mipmap/img_loading_l1"/>

        <ImageView
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_marginRight="8dp"
            android:src="@mipmap/img_loading_l1"/>

        <ImageView
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:src="@mipmap/img_loading_l1"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:background="@color/white"
        android:drawableRight="@mipmap/icon_arrow_down_four"
        android:paddingRight="15dp"
        android:foreground="@drawable/selector_foreground_white"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:drawablePadding="8dp"
        android:text="@string/today_live"
        android:textColor="@color/c_333333"
        android:textSize="15sp"
        android:textStyle="bold"
        android:fontFamily="@font/noto_sans_display_semibold"
        android:drawableLeft="@mipmap/icon_living"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="6dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="160dp"
            android:layout_marginRight="8dp"
            android:src="@mipmap/img_loading_l2"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="160dp"
            android:src="@mipmap/img_loading_l2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="6dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="160dp"
            android:layout_marginRight="8dp"
            android:src="@mipmap/img_loading_l2"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="160dp"
            android:src="@mipmap/img_loading_l2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="6dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="160dp"
            android:layout_marginRight="8dp"
            android:src="@mipmap/img_loading_l2"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="160dp"
            android:src="@mipmap/img_loading_l2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="6dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="160dp"
            android:layout_marginRight="8dp"
            android:src="@mipmap/img_loading_l2"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="160dp"
            android:src="@mipmap/img_loading_l2"/>

    </LinearLayout>

</LinearLayout>