<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_bg"
    android:layout_width="134dp"
    android:layout_height="141dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="6dp"
    android:foreground="@drawable/selector_foreground_white">

    <ImageView
        android:layout_width="36dp"
        android:layout_height="38dp"
        android:layout_marginLeft="2dp"
        android:src="@mipmap/img_history_highlights"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="9sp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="10dp"
        android:maxLines="1"
        android:singleLine="true"
        android:ellipsize="end"/>
    
    <ImageView
        android:id="@+id/iv_home_logo"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/img_team_logo_default"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="3dp"
        android:layout_toLeftOf="@id/iv_vs"
        android:layout_alignTop="@id/iv_vs"
        android:layout_alignBottom="@id/iv_vs"/>

    <ImageView
        android:id="@+id/iv_vs"
        android:layout_width="18dp"
        android:layout_height="31dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/img_live_vs"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_time"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:id="@+id/iv_away_logo"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignTop="@id/iv_vs"
        android:layout_alignBottom="@id/iv_vs"
        android:layout_toRightOf="@id/iv_vs"
        android:layout_alignParentRight="true"
        android:layout_marginRight="3dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/img_team_logo_default" />

    <LinearLayout
        android:id="@+id/ll_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_vs"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_home_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/white"
            android:singleLine="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="@font/noto_sans_display_semibold" />

        <TextView
            android:id="@+id/tv_home_score2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_home_name"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_toRightOf="@+id/tv_home_name"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_home_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/white" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_away"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_home"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_away_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/white"
            android:singleLine="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="@font/noto_sans_display_semibold" />

        <TextView
            android:id="@+id/tv_away_score2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_away_name"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_toRightOf="@+id/tv_away_name"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_away_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/white" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_view_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:textSize="10sp"
        android:textColor="@color/c_80FFFFFF"
        android:drawableLeft="@mipmap/ic_eye_white"
        android:drawablePadding="3dp"/>

</RelativeLayout>