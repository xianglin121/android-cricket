<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

<!--    标题-->
    <LinearLayout
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_1D2550"
        android:paddingLeft="15dp"
        android:paddingTop="28dp"
        android:paddingRight="15dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:textSize="13sp"
            android:textColor="@color/white"
            tools:text="Sri Lanka Women vs New Zealand Women Sri Lanka Women vs New Zealand Women"/>

        <TextView
            android:id="@+id/tv_tool_eyes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_80black_14dp_rec"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:drawableLeft="@mipmap/icon_eyes_2"
            android:drawablePadding="5dp"
            tools:text="31.9K"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:layout_marginRight="15dp"/>

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/icon_fork_white"
            android:padding="4dp"/>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/green">

        <ImageView
            android:layout_width="61dp"
            android:layout_height="16dp"
            android:background="@mipmap/img_logo_top"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="16dp"/>

        <LinearLayout
            android:id="@+id/ll_desc"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:orientation="vertical"
            android:background="@drawable/shape_bg_80black_rect"
            android:paddingLeft="20dp"
            android:paddingRight="25dp"
           android:layout_marginLeft="32dp"
            android:layout_marginTop="21dp">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:fontFamily="@font/noto_sans_display_semibold"
                tools:text="02 Bells"/>

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:textSize="10dp"
                tools:text="followed:555"/>

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_avatar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/bg_avatar_default"
            android:layout_marginLeft="18dp"
            android:layout_alignTop="@id/ll_desc" />

        <TextView
            android:id="@+id/tv_star"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/follow"
            android:textColor="@color/white"
            android:fontFamily="@font/noto_sans_display_semibold"
            android:textSize="11sp"
            android:layout_toRightOf="@id/ll_desc"
            android:layout_marginLeft="-15dp"
            android:background="@drawable/bg_charge"
            android:gravity="center"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_alignTop="@id/ll_desc"/>

        <TextView
            android:id="@+id/tv_tool_heart"
            android:layout_width="@dimen/dp_40"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:drawablePadding="4dp"
            android:drawableTop="@mipmap/icon_heart_white2"
            tools:text="7.9K"
            android:layout_above="@+id/tv_tool_share"
            android:layout_alignRight="@+id/tv_tool_share"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_tool_share"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:drawablePadding="4dp"
            android:drawableTop="@mipmap/icon_share_white"
            tools:text="200"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginRight="12dp"/>

    </RelativeLayout>

</LinearLayout>