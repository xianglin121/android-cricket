<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/ripple_6dp">

    <View
        android:id="@+id/v_h"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="@id/v_r1"
        app:layout_constraintBottom_toBottomOf="@id/v_r2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/shape_f1f1f1_oval"/>

    <View
        android:id="@+id/v_r1"
        android:layout_width="100dp"
        android:layout_height="23dp"
        android:layout_margin="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/shape_f1f1f1_3dp_rec"
        app:layout_constraintLeft_toRightOf="@id/v_h"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/v_r2"
        android:layout_width="200dp"
        android:layout_height="23dp"
        android:layout_margin="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/shape_f1f1f1_3dp_rec"
        app:layout_constraintLeft_toRightOf="@id/v_h"
        app:layout_constraintTop_toBottomOf="@id/v_r1"/>


    <View
        android:id="@+id/v_2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:background="@color/line_color"
        app:layout_constraintTop_toBottomOf="@id/v_h"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>