<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@mipmap/bg_avatar_default"
        android:layout_marginLeft="10dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_avatar"
        app:layout_constraintLeft_toRightOf="@id/iv_avatar"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="5dp"
        android:textSize="14dp"
        android:fontFamily="@font/noto_sans_display_semibold"
        android:textColor="@color/c_333333"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        app:layout_constraintBottom_toBottomOf="@id/iv_avatar"
        app:layout_constraintLeft_toRightOf="@id/iv_avatar"
        android:layout_marginLeft="6dp"
        android:textSize="12dp"
        android:textColor="@color/c_999999"/>

    <ImageView
        android:id="@+id/iv_follow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/icon_game_plus"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toTopOf="@id/iv_avatar"
        app:layout_constraintBottom_toBottomOf="@id/iv_avatar"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_avatar"
        app:layout_constraintLeft_toLeftOf="@id/iv_avatar"
        android:layout_marginTop="12dp"
        android:textSize="14dp"
        android:textColor="@color/c_333333"/>

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="12dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/bg_football_match_head"/>

<!--    <ImageView
        android:id="@+id/iv_live_status"
        android:layout_width="50dp"
        android:layout_height="22dp"
        android:src="@mipmap/icon_live_gift_pink"
        app:layout_constraintBottom_toBottomOf="@+id/iv_cover"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp" />-->

    <TextView
        android:id="@+id/tv_eyes_num"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:background="@drawable/shape_bg_2_black_rect"
        android:drawableLeft="@mipmap/icon_eyes_full_white"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:text="0"
        android:gravity="center"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:drawablePadding="4dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_cover"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"/>
    
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/iv_cover"
        app:layout_constraintLeft_toLeftOf="parent">

        <LinearLayout
            android:id="@+id/ll_heart"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_tool_heart"
                android:layout_width="34dp"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/selector_game_tool_heart"/>

            <TextView
                android:id="@+id/tv_tool_heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_888888"
                android:textSize="12sp"
                android:text="0"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_reply"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:layout_width="22dp"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@mipmap/icon_game_comment"/>

            <TextView
                android:id="@+id/tv_tool_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_888888"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"
                android:text="0"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@mipmap/icon_game_share"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_888888"
                android:textSize="12sp"
                android:text="@string/share"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/ll_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/c_E9E9E9"/>

</androidx.constraintlayout.widget.ConstraintLayout>