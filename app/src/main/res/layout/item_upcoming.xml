<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="6dp"
    android:orientation="vertical">
    
    <RelativeLayout
        android:id="@+id/rl_bg"
        android:layout_width="160dp"
        android:layout_height="82dp"
        android:background="@mipmap/bg_live_upcoming1">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="@color/white"
            android:textSize="9sp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end" />

        <ImageView
            android:id="@+id/iv_home_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/img_team_logo_default"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/iv_vs"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_home_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_home_logo"
            android:ellipsize="end"
            android:fontFamily="@font/noto_sans_display_semibold"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignLeft="@id/iv_home_logo"
            android:layout_alignRight="@id/iv_home_logo"/>

        <TextView
            android:id="@+id/iv_vs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="V/S"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@id/iv_home_logo"
            android:layout_alignBottom="@+id/iv_home_logo"
            android:gravity="center_vertical"/>

        <ImageView
            android:id="@+id/iv_away_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_vs"
            android:layout_alignParentRight="true"
            android:scaleType="fitCenter"
            android:src="@mipmap/img_team_logo_default" />

        <TextView
            android:id="@+id/tv_away_name"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_home_logo"
            android:ellipsize="end"
            android:fontFamily="@font/noto_sans_display_semibold"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignLeft="@id/iv_away_logo"
            android:layout_alignRight="@id/iv_away_logo"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:maxLines="1"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:gravity="center_horizontal"/>
</LinearLayout>
