<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_open_live"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_dc3c23_10dp_stroke_rec"
    android:padding="4dp"
    android:foreground="@drawable/selector_foreground_white"
    android:visibility="gone">

    <ImageView
        android:id="@+id/iv_live_thumb"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"/>

    <ImageView
        android:layout_width="51dp"
        android:layout_height="13dp"
        android:src="@mipmap/img_logo_top"
        android:layout_alignTop="@id/iv_live_thumb"
        android:layout_alignLeft="@id/iv_live_thumb"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"/>

    <TextView
        android:id="@+id/tv_views_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:background="@drawable/shape_80black_14dp_rec"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:drawableLeft="@mipmap/icon_live_people_count"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:layout_alignTop="@id/iv_live_thumb"
        android:layout_alignRight="@id/iv_live_thumb"
        android:layout_marginTop="6dp"
        android:layout_marginRight="8dp"/>

